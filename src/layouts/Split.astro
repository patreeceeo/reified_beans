---
import type {Options} from 'split.js';
import '../split.css';
interface Props {
  options?: Options;
  [key: string]: any;
}
const {options, ...rest} = Astro.props;
---
<split-layout data-options={JSON.stringify(options ?? {})} {...rest} class="split">
  <slot name="1"></slot>
  <slot name="2"></slot>
</split-layout>
<script>
  import {SplitLayout} from './Split'
  customElements.define("split-layout", SplitLayout);
</script>
